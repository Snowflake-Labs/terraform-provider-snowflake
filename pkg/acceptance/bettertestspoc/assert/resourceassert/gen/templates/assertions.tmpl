////////////////////////////

{{ range .Attributes -}}
func ({{ $assertVar }} *{{ $assertName }}) HasNo{{ SnakeCaseToCamel .Name }}() *{{ $assertName }} {
{{ $assertVar }}.AddAssertion(assert.ValueNotSet("{{ .Name }}"))
return {{ $assertVar }}
}

{{ end -}}
